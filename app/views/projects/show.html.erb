<div class="flex flex-col md:flex-row md:space-x-8">
  <%= cover(@project) %>

  <div class="flex flex-col">
    <%= date_for(@project) %>

    <h1 class="my-2 font-bold text-2xl md:text-3xl"><%= @project.name %></h1>

    <div class="flex flex-row space-x-4 items-center justify-start mb-6">
      <%= priority_for(@project) %>
      <%= status_for(@project) %>
    </div>

    <div class="flex flex-row space-x-4">
      <%= link_to "Add activity", new_project_activity_path(@project),
        class: 'button' %>

      <%= link_to "Edit", edit_project_path(@project), 
        class: "button" %>

      <% if @project.done? %>
        <%= button_to "Remove", project_path(@project), method: :delete,
        form: {data: {turbo_confirm: "This project and all its activities will be deleted. Are you sure?"}},
        class: 'button' %>
      <% end %>
    </div>

  </div>
</div>

<div class="my-8">
  <%= @project.description %>
</div>

<% if @next %>
  <h2 class="mt-8 mb-4">To do</h2>
<%= render("activities/activity", project: @project, activity: @next) %>
<% end %>

<% unless @todos.empty? %>
  <h2 class="mt-8 mb-4">To do</h2>
  <% @todos.each do |activity| %>
    <%= render activity, project: @project %>
  <% end %>
<% end %>

<% unless @dones.empty? %>
  <h2 class="mt-8 mb-4 text-slate-500">Done</h2>

  <% @dones.each do |activity| %>
    <%= render "activities/activity_done", activity: activity, project: @project %>
  <% end %>
<% end %>
