<div class="flex flex-col md:flex-row md:justify-between">
  <h1 class="mb-2 md:mb-4 font-bold text-3xl"><%= @project.name %></h1>

  <div class="flex flex-row space-x-4 items-center justify-start mb-4">
    <%= status_for(@project) %>

    <div class="w-8 h-8 rounded-full bg-indigo-400 flex justify-center
                items-center text-white font-bold">
      <%= @project.priority %>
    </div>
  </div>
</div>


<div>
  <%= @project.description %>
</div>

<%= link_to "Edit", edit_project_path(@project), 
  class: "button" %>

<%= link_to "Add activity", new_project_activity_path(@project),
  class: 'button' %>

<% unless @activities_todo.empty? %>
  <h2 class="mt-8 mb-4">To do</h2>

  <% @activities_todo.each do |activity| %>
    <%= render activity, project: @project %>
  <% end %>
<% end %>

<% unless @activities_done.empty? %>
  <h2 class="mt-8 mb-4">Done</h2>

  <% @activities_done.each do |activity| %>
    <%= render activity, project: @project %>
  <% end %>
<% end %>
