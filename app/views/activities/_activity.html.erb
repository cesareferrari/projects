<div id="activity-<%= activity.id %>"
     class="p-2 mb-2 flex flex-col justify-between align-start
  <%= activity.next? ? 'bg-amber-200 border-l-8 border-l-amber-400' : 'bg-slate-200' %> ">

  <%= activity.content %>

  <span class="flex flex-row space-x-6">
    <%= button_to "Edit", edit_project_activity_path(project, activity),
      method: :get,
      class: "text-sm uppercase" %>

    <%= button_to "Remove", project_activity_path(project, activity),
      method: :delete, 
      form: {data: {turbo_confirm: "Are you sure?"}},
      class: "uppercase text-sm" %>

    <% if activity.done? %>
      <%= button_to "Reactivate", done_activity_path(activity),
        method: :delete,
        class: "uppercase text-sm" %>
    <% else %>
      <%= button_to "Done", done_activities_path(activity),
        class: "uppercase text-sm" %>
    <% end %>

    <% unless activity.done? || activity.next? %>
      <%= button_to "Make Next", next_activities_path(activity),
        class: "uppercase text-sm" %>
    <% end %>

    <% if activity.done? %>
      <span>Done <%= time_ago_in_words(activity.updated_at) %> ago</span>
    <% else %>
      <span>Created <%= time_ago_in_words(activity.created_at) %> ago</span>
    <% end %>

  </span>

</div>
