<h2 class="text-2xl border-b border-slate-400 p-4">
  <%= link_to "Projects", root_path %>
</h2>

<nav class="py-4 flex flex-row bg-slate-200">

  <% if current_user %>
    <%= link_to current_user.name, current_user, class: "mx-4" %>
    <%= link_to "My Projects", user_projects_path(current_user), class: "mx-4" %>
    <%= button_to "Sign out", session_path, method: :delete, class: "mx-4" %> 
  <% else %>
    <%= link_to "Sign in", new_session_path, class: "mx-4" %> 
  <% end %>
</nav>

