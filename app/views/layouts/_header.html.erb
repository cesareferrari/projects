<h2 class="text-2xl border-b border-slate-400 p-4">
  <%= link_to "Projects", root_path %>
</h2>

<nav class="py-4 flex flex-row bg-slate-200 space-x-4">

  <% if current_user %>
    <%= link_to current_user.name, current_user %>
