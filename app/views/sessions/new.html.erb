<h1 class="font-bold text-4xl">Sign in</h1>

<div class="my-8">
<%= form_with(url: session_path, local: true) do |f| %>
  <p>
  <%= f.label :email, class: "block" %>
  <%= f.email_field :email %>
  </p>

  <p>
  <%= f.label :password, class: "block" %>
  <%= f.password_field :password %>
  </p>

  <p>
  <%= f.submit "Sign in" %>
  </p>

<% end %>
</div>
